<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageTinMoi"
            android:src="@drawable/a1"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTinmoi1"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Ritaki - Khoai Lang Mật - Nguyễn Văn Cừ chỉ từ 140K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textTinmoi2"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:text=" Giảm tới 30% Ritaki - Khoai Lang Mật - Nguyễn Văn Cừ chỉ từ 140K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>