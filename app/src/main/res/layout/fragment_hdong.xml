        android:id="@+id/spn_tpho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/spn_hoatdong"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="29dp"
    android:layout_width="match_parent"
